#girls {
  text-align: center;
}

.girls-number {
  color: white;
}

.girl-items {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  padding-left: 0;
}

.girl-item {
  display: inline-flex;
  text-align: center;
  justify-content: center;
  width: 12rem;
  margin: 2rem;

  +mobile() {
    width: 8rem;
    margin: 1rem;
  }

  .girl {
    &-info {
      width: 100%;
      padding: 0;
      margin: 0;
    }

    &-avatar {
      object-fit: cover;
      object-position: center top;
      width: 12rem;
      height: 12rem;
      border-radius: 50%;
      padding: 0.2rem;
      background-color: #fff;
      box-shadow: 0 0 1rem rgba(0, 0, 0, 0.12);
      transition: 0.5s;

      +mobile() {
        width: 8rem;
        height: 8rem;
      }

      &:hover {
        box-shadow: 0 0 2rem rgba(0, 0, 0, 0.12);
      }
    }

    &-name {
      font-size: 1rem;
    }

    &-from {
      font-size: 0.9rem;
      font-family: $font-family-serif;
      font-weight: bold;
      color: $dark;
      
      +mobile() {
        font-size: 0.6rem;
      }

      &::before {
        content: '「';
      }

      &::after {
        content: '」';
      }
    }
  }
}
