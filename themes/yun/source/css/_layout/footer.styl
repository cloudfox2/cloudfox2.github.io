#footer {
  font-size: 0.9rem;
  color: $dark;
  text-shadow: 0px 0px 3px #fff;
  text-align: center;
  padding-top: 1rem;
  padding-bottom: 0.5rem;

  .footer-separator {
    margin: 0 0.5rem;
  }

  .footer-custom-text {
    margin-top: 0.3rem;
    line-height: 0;
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }

  10%, 30% {
    transform: scale(0.9);
  }

  20%, 40%, 60%, 80% {
    transform: scale(1.1);
  }

  50%, 70% {
    transform: scale(1.1);
  }
}

@keyframes spin {
  0% {
    -webkit-transform rotate(0deg);
    transform rotate(0deg);
  }
  100% {
    -webkit-transform rotate(359deg);
    transform rotate(359deg);
  }
}

if (hexo-config('footer.icon.animated')) {
  #animate {
    $anim = hexo-config('footer.icon.animation');
    if ($anim == 'spin') {
      animation: spin 2.66s infinite linear;
    } else {
      animation: pulse 1.33s ease-in-out infinite;
    }
  }
}

.with-love {
  display: inline-block;
  margin: 5px 5px 0 5px;
  color: unquote(hexo-config('footer.icon.color'));
}

if (hexo-config('busuanzi.enable')) {
  #busuanzi {
    &_value {
      &_site_uv, &_site_pv, &_page_pv {
        margin-left: 0.2rem;
      }
    }
  }
}

.moe-text {
  margin: 0 5px;
}
