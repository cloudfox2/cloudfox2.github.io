#say {
  display: block;
  text-align: center;
  font-family: $font-family-serif;
  font-weight: bold;
  padding: 1rem;
  padding-left: 4rem;
  padding-right: 4rem;
  background: $white90;
  border-top: $border-width solid black;
  border-bottom: $border-width solid black;

  +mobile() {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  #say-content {
    color: var(--hty-color);
    display: block;
  }

  #say-from {
    display: block;
  }
}